{% extends 'base.html.twig' %}

{% block title %}Bienvenue chez Arcadia{% endblock %}

{% block body %}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Accueil - Zoo</title>
    <style>
        .carousel {
            display: grid; 
            grid-template-columns: repeat(3, 1fr); /* Trois colonnes */ 
            gap: 10px; /* Espacement entre les colonnes */ 
            width: 100%; height: 300px; 
            margin-bottom: 2em;
        }
        .carousel-item { 
            overflow: hidden; /* Cache le débordement */ } .carousel-item img { width: 100%; height: 100%; 
            object-fit: cover; /* Assure que l'image couvre toute la cellule */ }
        .carousel img {
            width: 100%;
        }
        .section { 
            margin-top: 40px; 
            text-align: center;
        }
        .section:nth-child(even) {
            background-color: #f9f9f9;
        }
        .section h2 {
            margin-top: 0;
        }
        .image-container {
            text-align: center;
            margin-top: 20px;
        }
        .image-container img {
            max-width: 100%;
            height: auto;
            border: 2px solid #ccc;
        }
        .habitats-grid { 
            display: grid; 
            grid-template-columns: repeat(2, 1fr); 
            gap: 20px; 
            max-width: 800px; 
            margin: 0 auto;
        }
        .habitat {
            display: flex; 
            align-items: center; 
            justify-content: center; 
            padding: 20px; 
            border: 1px solid #ccc; 
            border-radius: 10px;
        }
        .habitat-content {
            text-align: left;
        }
        .services-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
            max-width: 800px;
            margin: 0 auto;
        }
        .service {
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 10px;
        }
        .service-content {
            text-align: left;
        }
        .animals-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
            max-width: 800px;
            margin: 0 auto;
        }
        .animal {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 10px;
            background-color: #f9f9f9;
        }
        .animal-content {
            text-align: center;
        }
        .animal-image img {
            max-width: 100%;
            height: auto;
            border: 2px solid #ccc;
            border-radius: 5px;
            margin-bottom: 10px;
        }
        .reviews-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
            max-width: 800px;
            margin: 0 auto;
        }
        .review {
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 10px;
            background-color: #f9f9f9;
        }
    </style>
</head>
<body>

    <!-- Carousel -->
    <div class="carousel"> <div class="carousel-item"> 
    <img src="{{ asset('images/croco.png') }}" alt="Description de l'image"> </div> <div class="carousel-item"> <img src="{{ asset('images/dragon.png') }}" alt="Description de l'image"> </div> <div class="carousel-item"> <img src="{{ asset('images/otarie.png') }}" alt="Description de l'image"> </div> </div>

    <!-- Section: Habitats -->
    <div class="section">
        <h2>Présentation des Habitats</h2>
        <div class="habitats-grid">
            {% for habitat in habitats %}
            <div class="habitat">
                <div class="habitat-content">
                    <h3>{{ habitat.nom }}</h3>
                    <p>{{ habitat.description }}</p>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>

    <!-- Section: Services -->
    <div class="section">
        <h2>Présentation des Services</h2>
        <div class="services-grid">
            {% for service in services %}
            <div class="service">
                <div class="service-content">
                    <h3>{{ service.nom }}</h3>
                    <p>{{ service.description }}</p>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>

    <!-- Section: Animaux -->
    <div class="section">
        <h2>Nos Animaux</h2>
        <div class="animals-grid">
            {% for animal in animaux %}
            <div class="animal">
                <div class="animal-content">
                    <h3>{{ animal.prenom }}</h3>
                    {% if animal.image %}
                    <div class="animal-image">
                        <img src="{{ asset('images/' ~ animal.image) }}" alt="{{ animal.prenom }}">
                    </div>
                    {% endif %}
                    <p>{{ animal.etat }}</p>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>

    <!-- Section: Avis -->
    <div class="section">
        <h2>Les Avis de Nos Visiteurs</h2>
        <div class="reviews-grid">
            {% for avis in avis %}
            <div class="review">
                <h3>{{ avis.pseudo }}</h3>
                <p>"{{ avis.commentaire }}"</p>
            </div>
            {% endfor %}
        </div>
    </div>

</body>
</html>

{% endblock %}
