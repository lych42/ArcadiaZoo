<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="style.css">
        {% block stylesheets %}{% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
        <style>
        body {
            font-family:  Georgia, serif;;
            margin: 0;
            padding: 0;
        }
        .navbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: #006400;
        padding: 1em;
        color: white;
    }
    .logo {
        margin: 0;
    }
    .logo a {
        color: #fff;
        text-decoration: none;
    }
    .navigation {
        margin-left: auto;
    }
    .navigation ul {
        list-style: none;
        display: flex;
        margin: 0;
        padding: 0;
    }
    .navigation ul li {
        margin-left: 20px;
    }
    .navigation ul li a {
        color: #fff;
        text-decoration: none; /* Supprime le soulignement */
        opacity: 0.7; /* Légèrement transparent */
        transition: opacity 0.3s;
    }
    .navigation ul li a:hover {
        text-decoration: none; /* Supprime le soulignement au survol */
        opacity: 1; /* Pleine opacité au survol */
    }
    .navigation ul li a.active {
        text-decoration: none; /* Supprime le soulignement pour l'onglet actif */
        opacity: 1; /* Pleine opacité pour l'onglet en cours */
    }
        .footer {
            display: flex;
            justify-content: space-around;
            align-items: center;
        }
        .footer-column {
            margin: 0 10px;
        }
        .footer a {
            color: #fff; /* Couleur blanche pour les liens dans le footer */
            text-decoration: none;
        }
        .footer a:hover {
            text-decoration: underline;
        }
        </style>
    </head>
    <body>

    <!-- Header -->
  <header class="header">
    <div class="navbar"> 
        <div class="logo"> 
            <h1><a href="{{ path('home') }}">Arcadia</a></h1> 
        </div> 
        <nav class="navigation"> 
            <ul> 
                <li><a href="{{ path('services') }}" class="{{ app.request.attributes.get('_route') == 'services' ? 'active' : '' }}">Services</a></li> 
                <li><a href="{{ path('habitats') }}" class="{{ app.request.attributes.get('_route') == 'habitats' ? 'active' : '' }}">Habitats</a></li> 
                <li><a href="{{ path('login') }}" class="{{ app.request.attributes.get('_route') == 'login' ? 'active' : '' }}">Connexion</a></li> 
                <li><a href="{{ path('contact') }}" class="{{ app.request.attributes.get('_route') == 'contact' ? 'active' : '' }}">Contact</a></li> 
            </ul> 
        </nav> 
    </div>
</header>
        
        {% block body %}{% endblock %}


    <!-- Footer -->
    <footer class="footer"> 
    <div class="footer-column"> 
    <h4>Horaires</h4> 
    <p>Lundi - Vendredi: 9h - 18h</p> 
    <p>Samedi: 10h - 17h</p> 
    <p>Dimanche: Fermé</p> 
    </div> 
    <div class="footer-column"> 
    <h4>Habitats</h4> 
    <ul class="footer-navigation"> 
        <li><a href="{{ path('habitats') }}">Tous les Habitats</a></li>
        <!-- Ajouter d'autres liens si nécessaire -->
    </ul>
    </div> 
    <div class="footer-column"> 
    <h4>Services</h4> 
    <ul class="footer-navigation"> 
        <li><a href="{{ path('services') }}">Nos Services</a></li>
        <!-- Ajouter d'autres liens si nécessaire -->
    </ul>
    </div> 
    </footer>
    </body>
</html>
